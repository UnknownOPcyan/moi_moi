datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId    Int      @unique
  username      String?
  firstName     String?
  lastName      String?
  points        Int      @default(0)
  claimedButton1 Boolean @default(false)
  claimedButton2 Boolean @default(false)
  claimedButton3 Boolean @default(false)
  invitedUsers  String[] @default([])
  invitedBy      String? @default("")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  farmStartTime DateTime?
  farmAmount    Int       @default(0)
  farmingPoints FarmingPoint[] @relation("UserFarmingPoints") // Relationship to FarmingPoint model
}

model FarmingPoint {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  points    Int
  createdAt DateTime @default(now())
  user      User     @relation("UserFarmingPoints", fields: [userId], references: [id])
}
